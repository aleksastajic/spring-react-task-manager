# Docker Compose / local dev
POSTGRES_DB=taskmanager_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
# Default host port is 5433 to avoid conflicts with a locally-installed Postgres.
# If you don't have anything on 5432, feel free to change this back.
POSTGRES_PORT=5433

SPRING_PROFILES_ACTIVE=dev

# Dev-only secret (for production use a long random value).
# Note: backend accepts plain strings or Base64(Base64URL) secrets.
JWT_SECRET=dev-secret-change-me
JWT_EXPIRATION=86400000

# Comma-separated list
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Optional: Vite dev proxy target (used when running frontend dev server)
VITE_PROXY_TARGET=http://localhost:8080
